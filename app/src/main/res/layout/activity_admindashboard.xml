<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    tools:context=".AdmindashboardActivity">

    <TextView
        android:id="@+id/break_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="Dashboard" />

    <TextView
        android:id="@+id/datebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/corner_bg"
        android:hint="Submission Date"
        android:paddingStart="10dp"
        android:textColorHint="#40000000"
        android:textSize="15sp"
        android:inputType="date"
        android:focusable="false"
        android:layout_above="@+id/prizeday"
        android:minHeight="50dp"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/prizeday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/prizenight"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:paddingStart="10dp"
        android:background="@drawable/corner_bg"
        android:hint="Price of the electricity during day"
        android:textSize="15sp"
        android:textColorHint="#40000000"
        android:inputType="text|number"
        android:minHeight="50dp" />

    <EditText
        android:id="@+id/prizenight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:paddingStart="10dp"
        android:background="@drawable/corner_bg"
        android:hint="Price of the electricity during night"
        android:textColorHint="#40000000"
        android:textSize="15sp"
        android:inputType="text|number"
        android:minHeight="50dp" />

    <EditText
        android:id="@+id/prizegas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prizenight"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:paddingStart="10dp"
        android:background="@drawable/corner_bg"
        android:hint="Price of the gas"
        android:textColorHint="#40000000"
        android:textSize="15sp"
        android:inputType="text|number"
        android:minHeight="50dp" />

    <EditText
        android:id="@+id/prizestandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prizegas"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:paddingStart="10dp"
        android:background="@drawable/corner_bg"
        android:hint="Enter the standard prize"
        android:textColorHint="#40000000"
        android:textSize="15sp"
        android:inputType="text|number"
        android:minHeight="50dp" />

    <Button
        android:id="@+id/adminsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prizestandard"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/black"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:paddingBottom="10dp"
        android:text="Submit" />

    <Button
        android:id="@+id/readingsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminsubmit"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/black"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:paddingBottom="10dp"
        android:text="View Customer Readings" />

</RelativeLayout>